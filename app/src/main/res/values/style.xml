<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TextAppearance.MyTheme.TitleBig" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="android:textSize">@dimen/_24sp</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="TextAppearance.MyTheme.Title" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="android:textSize">@dimen/_20sp</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">textStart</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:background">@color/secondary</item>
    </style>

    <style name="EditText">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">@dimen/_14sp</item>
        <item name="android:padding">@dimen/_14dp</item>
        <item name="android:background">@drawable/bg_et_gray</item>
    </style>

    <style name="Button">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/_18sp</item>
    </style>

    <style name="Button.SemiRounded">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/bg_btn_semi_rounded_primary</item>
    </style>
</resources>